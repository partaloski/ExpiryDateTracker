<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loadingFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.expirydatetracker.fragments.LoginFragment"
        tools:layout="@layout/fragment_first">
        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_FirstFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.expirydatetracker.fragments.HomeFragment"
        android:label="Дома"
        tools:layout="@layout/fragment_second">
        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
        <action
            android:id="@+id/action_SecondFragment_to_productsFragment"
            app:destination="@id/productsFragment" />
        <action
            android:id="@+id/action_SecondFragment_to_manufacturersFragment"
            app:destination="@id/manufacturersFragment" />
        <action
            android:id="@+id/action_SecondFragment_to_expiryFragment"
            app:destination="@id/expiryFragment" />
        <action
            android:id="@+id/action_SecondFragment_to_wishlistFragment"
            app:destination="@id/wishlistFragment" />
        <action
            android:id="@+id/action_SecondFragment_to_barcodeFragment"
            app:destination="@id/barcodeFragment" />
        <action
            android:id="@+id/action_SecondFragment_to_addManufacturerFragment"
            app:destination="@id/addManufacturerFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.expirydatetracker.fragments.RegisterFragment"
        android:label="Регистрација"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_FirstFragment"
            app:destination="@id/FirstFragment"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/productsFragment"
        android:name="com.example.expirydatetracker.fragments.ProductsFragment"
        android:label="Продукти"
        tools:layout="@layout/fragment_products" >
        <action
            android:id="@+id/action_productsFragment_to_productViewFragment"
            app:destination="@id/productViewFragment" />
    </fragment>
    <fragment
        android:id="@+id/manufacturersFragment"
        android:name="com.example.expirydatetracker.fragments.ManufacturersFragment"
        android:label="Производители"
        tools:layout="@layout/fragment_manufacturers2" />
    <fragment
        android:id="@+id/expiryFragment"
        android:name="com.example.expirydatetracker.fragments.ExpiryFragment"
        android:label="Истекувања"
        tools:layout="@layout/fragment_expiry" />
    <fragment
        android:id="@+id/wishlistFragment"
        android:name="com.example.expirydatetracker.fragments.WishlistFragment"
        android:label="Листа на посакувани продукти"
        tools:layout="@layout/fragment_wishlist" />
    <fragment
        android:id="@+id/barcodeFragment"
        android:name="com.example.expirydatetracker.fragments.BarcodeFragment"
        android:label="Скенирање продукт"
        tools:layout="@layout/fragment_barcode" >
        <action
            android:id="@+id/action_barcodeFragment_to_addExpiryFragment"
            app:destination="@id/addExpiryFragment" />
        <action
            android:id="@+id/action_barcodeFragment_to_addWishlistFragment"
            app:destination="@id/addWishlistFragment" />
        <action
            android:id="@+id/action_barcodeFragment_to_addProductFragment"
            app:destination="@id/addProductFragment" />
    </fragment>
    <fragment
        android:id="@+id/addExpiryFragment"
        android:name="com.example.expirydatetracker.fragments.AddExpiryFragment"
        android:label="Додавање истекување"
        tools:layout="@layout/fragment_add_expiry" />
    <fragment
        android:id="@+id/addWishlistFragment"
        android:name="com.example.expirydatetracker.fragments.AddWishlistFragment"
        android:label="Додавање на посакуван производ"
        tools:layout="@layout/fragment_add_wishlist" />
    <fragment
        android:id="@+id/addProductFragment"
        android:name="com.example.expirydatetracker.fragments.AddProductFragment"
        android:label="Додавање продукт"
        tools:layout="@layout/fragment_add_product" />
    <fragment
        android:id="@+id/addManufacturerFragment"
        android:name="com.example.expirydatetracker.fragments.AddManufacturerFragment"
        android:label="Додавање производител"
        tools:layout="@layout/fragment_add_manufacturer" />
    <fragment
        android:id="@+id/productViewFragment"
        android:name="com.example.expirydatetracker.fragments.ProductViewFragment"
        android:label="Продукт"
        tools:layout="@layout/fragment_product_view" >
        <action
            android:id="@+id/action_productViewFragment_to_addExpiryFragment"
            app:destination="@id/addExpiryFragment" />
        <action
            android:id="@+id/action_productViewFragment_to_addWishlistFragment"
            app:destination="@id/addWishlistFragment" />
    </fragment>
    <fragment
        android:id="@+id/loadingFragment"
        android:name="com.example.expirydatetracker.fragments.LoadingFragment"
        tools:layout="@layout/fragment_loading">
        <action
            android:id="@+id/action_loadingFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
</navigation>